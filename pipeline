pipeline {
    agent any
    stages {
        stage('Checkout Code') {
            steps { git 'https://github.com/aliefian880/project-tahap-awal-revisi.git' }
        }
        stage('Install Dependencies') {
            steps { sh 'npm install' }
        }
        stage('Run Unit Test') {
            steps { sh 'npm test' }
        }
    }
    post {
        always {
            junit 'reports/*.xml'
        }
    }
}
